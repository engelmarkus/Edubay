<h1>Listing doc_types</h1>

<table class="listing">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @doc_types.each do |doc_type| %>
  <tr>
    <td><%= doc_type.name %></td>
    <td><%= link_to 'Show', doc_type %></td>
    <td><%= link_to image_tag("edit.gif", :title => 'Edit'), edit_doc_type_path(doc_type) %></td>
    <td><%= link_to image_tag("delete.gif", :title => 'Destroy'), doc_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

