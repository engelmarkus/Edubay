<h1><%= t '.page_title' %></h1>

<table class="listing">
  <tr>
    <th><%= Device.human_attribute_name(:name) %></th>
    <th><%= t '.edit' %></th>
    <th><%= t '.destroy' %></th>
  </tr>

<% @doc_types.each do |doc_type| %>
  <tr>
    <td><%# link_to doc_type.name, doc_type %><%= doc_type.name %></td>
    <td><%= link_to image_tag("edit.gif", title: t('.edit')), edit_doc_type_path(doc_type) %></td>
    <td><%= link_to image_tag("delete.gif", title: t('.destroy')), doc_type, confirm: t('.destroy_confirm'), method: :delete, remote: true, class: 'delete_doc_type' %></td>
  </tr>
<% end %>
</table>

