<h1>Listing documents</h1>

<table class="listing">
  <tr>
    <th>Description</th>
    <th>Lecture date</th>
    <th>Category</th>
    <th>Lecture</th>
    <th>Uploader</th>
    <!--<th></th>-->
    <!--<th>Edit</th>-->
    <th>Destroy</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= link_to document.description, document %></td>
    <td><%= document.lecture_date %></td>
    <td><%= document.doc_type.name %></td>
    <td><%= document.lecture.name %></td>
    <td><%= document.uploader_id %></td>
    <!--<td><%# link_to 'Show', document %></td>-->
    <!--<td><%#link_to image_tag("edit.gif", :title => 'Edit'), edit_document_path(document) %></td>-->
    <td><%= link_to image_tag("delete.gif", title: 'Destroy'), document, confirm: 'Are you sure?', method: :delete, remote: true, class: 'delete_document' %></td>
  </tr>
<% end %>
</table>

