<p id="notice"><%= notice %></p>

<h1><%= t '.page_title' %></h1>
<ul>
  <li>
    <b><%= Lecturer.human_attribute_name(:name) %>:</b>
    <%= @lecturer.name %>
  </li>
</ul>

<br/>

<h2><%= t '.lectures' %></h2>
<table class="listing">
  <tr>
    <th><%= Lecture.human_attribute_name(:name) %></th>
    <th><%= Lecture.human_attribute_name(:term_id) %></th>
  </tr>
  
  <% @lecturer.lectures.each do |lecture| %>
    <tr>
      <td><%= link_to lecture.name, lecture %></td>
      <td><%= lecture.term.name %></td>
    </tr>
  <% end %>
</table>

<br/>

