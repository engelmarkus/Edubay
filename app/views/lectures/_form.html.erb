    <%= f.label :abbreviation %><br />
    <%= f.text_field :abbreviation %>
  </div>
  <div class="field">
    <%= f.label :term %><br />
    <%= f.collection_select :term_id, Term.all, :id, :name, :selected => Term.all.map(&:id).max %>
  </div>
  <div class="field">
    <%= f.label :lecturer %><br />
    <%= f.collection_select :lecturer_id, Lecturer.all, :id, :name, :prompt => true %>
  </div>
