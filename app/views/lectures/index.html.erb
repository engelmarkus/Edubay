<h1><%= t '.page_title' %></h1>

<table class="listing">
  <tr>
    <th><%= Lecture.human_attribute_name(:name) %></th>
    <th><%= Lecture.human_attribute_name(:abbreviation) %></th>
    <th><%= Lecture.human_attribute_name(:term_id) %></th>
    <th><%= Lecture.human_attribute_name(:lecturer_id) %></th>
    <th><%= t '.edit' %></th>
    <th><%= t '.destroy' %></th>
  </tr>

<% @lectures.each do |lecture| %>
  <tr>
    <td><%= link_to lecture.name, lecture %></td>
    <td><%= lecture.abbreviation %></td>
    <td><%= lecture.term.name %></td>
    <td><%= lecture.lecturer.name %></td>
    <td><%= link_to image_tag("edit.gif", title: t('.edit')), edit_lecture_path(lecture) %></td>
    <td><%= link_to image_tag("delete.gif", title: t('.destroy')), lecture, confirm: t('.destroy_confirm'), method: :delete, remote: true, class: 'delete_lecture' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.create_new_lecture'), new_lecture_path %>
