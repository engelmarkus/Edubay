<h1><%= t '.page_title' %></h1>

<table class="listing">
  <tr>
    <th><%= Term.human_attribute_name(:name) %></th>
    <!--<th></th>-->
    <th><%= t '.edit' %></th>
    <th><%= t '.destroy' %></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.name %></td>
    <!--<td><%# link_to 'Show', term %></td>-->
    <td><%= link_to image_tag("edit.gif", title: t('.edit')), edit_term_path(term) %></td>
    <td><%= link_to image_tag("delete.gif", title: t('.destroy')), term, confirm: t('.destroy_confirm'), method: :delete, remote: true, class: 'delete_button' %></td>
  </tr>
<% end %>
</table>

