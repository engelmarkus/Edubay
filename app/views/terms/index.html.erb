<h1>Listing terms</h1>

<table class="listing">
  <tr>
    <th>Name</th>
    <!--<th></th>-->
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.name %></td>
    <!--<td><%# link_to 'Show', term %></td>-->
    <td><%= link_to image_tag("edit.gif", title: 'Edit'), edit_term_path(term) %></td>
    <td><%= link_to image_tag("delete.gif", title: 'Destroy'), term, confirm: 'Are you sure?', method: :delete, remote: true, class: 'delete_term' %></td>
  </tr>
<% end %>
</table>

